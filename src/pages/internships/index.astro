---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import ExploreNav from "../../components/ExploreNav.astro";
import InternshipsComponent from "./internships.astro";
---

<Layout
  title="BOSC - Internships"
  description="Discover amazing internship opportunities with BOSC. Find the perfect internship to kickstart your career in tech."
  image="https://bosc.org.np/team.jpg"
  url="https://bosc.org.np/explore/internships"
>
  <main class="pt-7 pb-16">
    <Container>
        <div class="flex-1 p-4 md:p-8 lg:p-12">
          <h2
            class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-[var(--text-color)] text-center"
          >
            Internship Opportunities
          </h2>
          <p class="text-gray-600 text-center max-w-2xl mx-auto mb-8">
            Explore curated internship opportunities from top companies. Filter by location, category, and find the perfect match for your skills.
          </p>
          
          <!-- Internships Component -->
          <InternshipsComponent />
        </div>
   
    </Container>
  </main>
</Layout>